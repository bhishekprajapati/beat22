generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model File {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  ext       String
  mime      String
  filename  String
  size      Int
  ownerId   String
  key       String   @unique
  createdAt DateTime @default(now())
}
